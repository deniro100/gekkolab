{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5050"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SQLite": "Data Source=gekkodata/gekkolab.db"
  },
  "SensorConfiguration": {
    "PollingInterval": "00:00:20",
    "I2CAddress": "0x77",
    "EnableRetry": true,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "UseSimulator" : true
  },
  "AzureConfiguration": {
    "Enabled": false,
    "ConnectionString": "",
    "PublishIntervalMinutes": 5
  }
}
