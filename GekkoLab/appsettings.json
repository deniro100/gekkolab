{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "GekkoLab.Services.Camera": "Debug"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "SingleLine": true
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5050"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "SQLite": "Data Source=gekkodata/gekkolab.db"
  },
  "SensorConfiguration": {
    "PollingInterval": "00:00:20",
    "I2CAddress": "0x77",
    "EnableRetry": true,
    "MaxRetryAttempts": 3,
    "RetryDelayMs": 1000,
    "UseSimulator" : true
  },
  "AzureConfiguration": {
    "Enabled": false,
    "ConnectionString": "",
    "PublishIntervalMinutes": 5
  },
  "CameraConfiguration": {
    "UseSimulator": true,
    "Width": 1280,
    "Height": 720,
    "Quality": 85,
    "MotionDetection": {
      "Enabled": true,
      "PollingInterval": "00:00:01",
      "MinCaptureInterval": "00:00:05",
      "Sensitivity": 0.05,
      "CaptureDirectory": "gekkodata/motion-captures",
      "MaxCaptureAgeDays": 7,
      "MaxCaptureFiles": 1000
    }
  },
  "PerformanceMonitoring": {
    "Enabled": true,
    "SnapshotInterval": "00:00:05",
    "AggregationInterval": "00:01:00",
    "MaxAgeDays": 7
  }
}
